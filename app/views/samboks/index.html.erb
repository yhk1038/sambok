<h1>Samboks Main Information</h1> <%= link_to '홈으로 돌아가기', root_path, class: 'btn btn-primary', style: 'color: #fff' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slogan</th>
      <th>Img path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samboks.each do |sambok| %>
      <tr>
        <td><%= sambok.name %></td>
        <td><%= sambok.slogan %></td>
        <td><%= sambok.img_path %></td>
        <td><%= link_to '수정하기', edit_sambok_path(sambok), class: 'btn btn-warning btn-sm', style: 'color: #ffffff' %></td>
        <!--<td><%#= link_to 'Show', sambok %></td>-->
        <!--<td><%#= link_to 'Destroy', sambok, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

